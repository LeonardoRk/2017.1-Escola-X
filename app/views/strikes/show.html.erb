<%= render "layouts/navbar" %>
<section class="content-section" id="alunos-desc">
  <div class="container">
    <div class="pull-right">
      <%= link_to '<span class="fa fa-arrow-left"></span>Voltar'.html_safe, users_path, class:'btn btn-sm btn-info' %>
      <%if @current_user.is_a?(Employee) %>
        <%if @current_user.permission=="Principal" %>
          <%= link_to '<span class="fa fa-edit"></span>Editar'.html_safe, edit_strike_path(@strike), class:"btn btn-sm btn-default" %>
          <%= link_to '<span class="fa fa-times"></span>Excluir'.html_safe, "", method: :delete, class:'btn btn-sm btn-danger', data: { confirm: 'Tem certeza? Essa alteração não pode ser desfeita.' } %>
        <% end %>
      <% end %>
    </div>
    <div class="row item">
      <div class="col-sm-12 col-md-8 descript">
        <h3 class="">Descrição da advertência: <%= @strike.description_strike %></h3>
        <h3 class="">Quantidade de advertências do aluno: <%= @alumn.quantity_strike %></h3>
        <h3 class="">Nome do aluno: <%= @alumn.name %></h3>
        <h3 class="">Matricula do aluno: <%= @alumn.registry %></h3>
        <h3 class="">Matricula do professor/diretor: <%= @employee.registry %></h3>
      </div>
    </div>
  </div>
</section>
