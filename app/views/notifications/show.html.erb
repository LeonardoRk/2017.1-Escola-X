<%= render "layouts/navbar" %>
<section class="content-section" id="alunos-desc">
  <div class="container">
    <div class="pull-right">
      <%= link_to '<span class="fa fa-arrow-left"></span>Voltar'.html_safe, users_path, class:'btn btn-sm btn-info' %>
      <%if @current_user.id == @notification.notification_emitter_id %>
        <%= link_to '<span class="fa fa-edit"></span>Editar'.html_safe, edit_notification_path(@notification), class:"btn btn-sm btn-default" %>
      <%end%>
      <%if @current_user.permission=="Principal" %>
        <%= link_to '<span class="fa fa-times"></span>Excluir'.html_safe, "", method: :delete, class:'btn btn-sm btn-danger', data: { confirm: 'Tem certeza? Essa alteração não pode ser desfeita.' } %>
      <%end%>
    </div>
    <div class="row item">
      <div class="col-sm-12 col-md-8 text-capitalize">
        <h3><%= @notification.title %></h3>
        <h5>De: <%= @assignee %></h5>
      </div>
      <div class="col-sm-12 col-md-4">

      </div>
    </div>
  </div>
</section>
