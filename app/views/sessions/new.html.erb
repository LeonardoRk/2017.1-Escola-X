
<%= form_tag sessions_path do %>
<div class="row ">
    <div >
        <%= label_tag :login, 'Login' %>
    </div>
    <div >
        <%= text_field_tag :login %>
    </div>
</div>
<div >
    <div >
        <%= label_tag :password, 'Password' %>
    </div>
    <div >
        <%= password_field_tag :password %>
    </div>
</div>
    <div  >
        <%= submit_tag "Login"%>
    </div>
</div>


<% end %>
