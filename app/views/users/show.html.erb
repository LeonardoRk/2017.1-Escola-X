<%= render "layouts/navbar" %>
<section class="content-section" id="alunos-desc">
  <% if @user.permission == "Parent" %>
    <div class="container">
      <%= link_to 'Editar', edit_parent_path(@user), class:"btn btn-sm btn-info" %>
      <%= link_to 'Destroy', "", method: :delete, class:'btn btn-sm btn-danger', data: { confirm: 'Tem certeza? Essa alteração não pode ser desfeita.' } %>
        <div class="row item">
          <div class="col-sm-12 col-md-4">
            <%= image_tag("avatar_250x300.png", alt: "", class: "img-responsive" ) %>
          </div>
        <div class="col-sm-12 col-md-8 text-capitalize descript">
          <h3 class="">Nome: <%= @user.name %></h3>
          <h4 class="">Telefone: <%= @user.phone %></h4>
          <h4 class="">Sexo: <%= @user.gender %></h4>
          <h4 class="">Endereço: <%= @user.address %></h4>
          <h4 class="">Data de Nascimento: <%= @user.birth_date %></h4>
        </div>
      </div>
    </div>
    <% end %>
    <% if @user.permission == "Alumn" %>
      <div class="container">
        <%= link_to 'Editar', edit_alumn_path(@user), class:"btn btn-sm btn-info" %>
        <%= link_to 'Destroy', "", method: :delete, class:'btn btn-sm btn-danger', data: { confirm: 'Tem certeza? Essa alteração não pode ser desfeita.' } %>
          <div class="row item">
            <div class="col-sm-12 col-md-4">
              <%= image_tag("avatar_250x300.png", alt: "", class: "img-responsive" ) %>
            </div>
          <div class="col-sm-12 col-md-8 text-capitalize descript">
            <h3 class="">Nome: <%= @user.name %></h3>
            <h4 class="">Telefone: <%= @user.phone %></h4>
            <h4 class="">Sexo: <%= @user.gender %></h4>
            <h4 class="">Endereço: <%= @user.address %></h4>
            <h4 class="">Data de Nascimento: <%= @user.birth_date %></h4>
          </div>
        </div>
      </div>
      <% end %>
</section>
