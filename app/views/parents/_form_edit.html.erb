<%= render "layouts/navbar" %>
<%= form_for (@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="container">
      <div class="text-danger text-justify">
        <div id="error_explanation">
          <h2 class=""><%= pluralize(@user.errors.count, "erro") %> proibiram este formulario de ser salvo:</h2>
          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, class:"sr-only" %>
    <div class="input-group">
      <span class="input-group-addon">
        <span class="fa fa-user"></span>
         Nome
      </span>
      <%= f.text_field :name, class:"form-control", placeholder:"Nome do usuário", class:'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, class:"sr-only" %>
    <div class="input-group">
      <span class="input-group-addon">
        <span class="fa fa-home"></span>
         Endereço
      </span>
      <%= f.text_field :address, class:"form-control", placeholder:"Ex.: Rua do limoeiro, casa 53" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, class:"sr-only" %>
    <div class="input-group">
      <span class="input-group-addon">
        <span class="fa fa-phone"></span>
         Telefone
      </span>
      <%= f.text_field :phone, class:"form-control", placeholder:"Somente números e com DDD." %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :birth_date, class:"sr-only" %>
    <div class="input-group">
      <span class="input-group-addon">
        <span class="fa fa-gift"></span>
         Data de nascimento
      </span>
      <%= f.date_field :birth_date, class:"form-control", placeholder:"Ex.: dd/mm/aaaa" %>
    </div>
  </div>
  <%= f.fields_for :parent, Parent.new do |pf|%>
    <div class="form-group">
      <%= pf.label :parent_cpf, class:"sr-only" %>
      <div class="input-group">
        <span class="input-group-addon">CPF</span>
        <%= pf.text_field :parent_cpf, class:"form-control", placeholder:"Ex.: 000.000.000-00" %>
      </div>
      <p>
        <small class="text-muted text-lowercase">(somente numeros)</small>
      </p>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :gender, class:"sr-only" %>
    <p class="text-uppercase"><strong>Sexo</strong></p>
    <div class="checkbox">
      <%= radio_button_tag(:gender, "Mulher") %>
      <%= label_tag(:gender_female, "Mulher") %>
    </div>
    <div class="checkbox">
      <%= radio_button_tag(:gender, "Homem") %>
      <%= label_tag(:gender_male, "Homem") %>
    </div>
  </div>
  <%= f.button '<span class="fa fa-check"></span> Salvar'.html_safe, type:"submit", class:'btn btn-lg btn-success' %>
  <%= link_to '<span class="fa fa-arrow-left"></span> Voltar'.html_safe, users_path, class:'btn btn-lg btn-warning' %>
<% end %>
